<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:l="sap.ui.layout"
	xmlns:f="sap.f" xmlns:suite="sap.suite.ui.commons" xmlns:custData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<IconTabBar id="idIconTabBar" select=".onVendorFilterSelect" class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter icon="sap-icon://add-employee" iconColor="Positive" design="Horizontal" count="3" text="Requestors" key="vendReq"/>
			<IconTabSeparator/>
			<IconTabFilter icon="sap-icon://employee-lookup" iconColor="Default" design="Horizontal" count="10" text="Steward" key="vendSteward"/>
			<IconTabSeparator/>
			<IconTabFilter icon="sap-icon://employee-approvals" iconColor="Neutral" design="Horizontal" count="35" text="Approvers" key="vendApprover"/>
		</items>
		<content>
			<Table visible="{App>/Vendor/requestor}" items="{path:'BRMMaster>/VENDOR_REQUESTOR'}">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="Add Stage Approver" icon="sap-icon://add" type="Transparent" press="addEditVendor"></Button>
						<Button icon="sap-icon://delete" type="Reject" press="handleCreateERPVendor"></Button>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column mergeDuplicates="true">
						<header>
							<Text text="USERS"/>
						</header>
					</Column>
					<Column>
						<header>
							<Text text="EMAIL ID"/>
						</header>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="PID"/>
						</header>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="ACCOUNT GROUPS"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem vAlign="Middle" type="Detail" detailPress="onVendorDetails">
					<Text text="{BRMMaster>user}"/>
					<Text text="{BRMMaster>emailid}"/>
					<Text text="{BRMMaster>pid}"/>
					<Text text="{BRMMaster>acgroup}"/>
				</ColumnListItem>
			</Table>
			<Table visible="{App>/Vendor/steward}" items="{path:'BRMMaster>/VendorsBRMData'}">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="Add Stage Approver" icon="sap-icon://add" type="Transparent" press="addEditVendor"></Button>
						<Button icon="sap-icon://delete" type="Reject" press="handleCreateERPVendor"></Button>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column mergeDuplicates="true">
						<header>
							<Text text="ATTRIBUTE"/>
						</header>
					</Column>
					<Column>
						<header>
							<Text text="TYPE OF USER"/>
						</header>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="STAGE APPROVER"/>
						</header>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<header>
							<Text text="VALUE"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem vAlign="Middle" type="Detail" detailPress="onVendorDetails">
					<Text text="{BRMMaster>attribute}"/>
					<Text text="{BRMMaster>usertype}"/>
					<Text text="{BRMMaster>stageapprover}"/>
					<Text text="{BRMMaster>value}"/>
					<!--<ObjectIdentifier title="{Name}" text="{ProductId}"/>
				<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
				<ObjectNumber number="{WeightMeasure}" unit="{WeightUnit}"
					state="{ path: 'WeightMeasure', formatter: 'sap.m.sample.TableMergeCells.Formatter.weightState' }"/>
				<ObjectNumber
					number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
					unit="{CurrencyCode}"/>-->
				</ColumnListItem>
			</Table>
		</content>
	</IconTabBar>
</core:FragmentDefinition>